pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // Install dependencies and build project
                sh 'npm install'
                sh 'npm run build'
                // Archive artifacts
                archiveArtifacts artifacts: 'dist/**', fingerprint: true
            }
